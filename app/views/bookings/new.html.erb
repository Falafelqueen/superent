
<!--This page only can be seen by people that are logged in AND dont own the car!-->





<div class="big-container">
  <!--div below is for the left half of the screen (car info)-->
  <div class="left-car-info-container">
      <p class="title-car-show-page" >The car you are looking for</p><br>
      <div class="car-picture-show-page-infos">
        <% if @car.photo.present? %>
          <%= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <%= image_tag("No-Image-Placeholder.svg.png", height:300, width:400) %>
        <% end %>
      </div><br>
      <p class="text-car-show"><%= @car.model %></p>
      <p class="text-car-show">Price: <%= @car.price %> $</p>
      <p class="text-car-show">Available from: <%= @car.start_date %></p>
      <!-- Line below is a test for displaying user uploaded photo of the car -->
      <%#= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill %>
      <p class="text-car-show">To: <%= @car.end_date %></p>
      <br>
      <%= link_to "Go back", cars_path, class: "btn btn-show-car-page" %>
    <!---right half of the screen--->
  </div>
  <div class="right-car-booking-container">
    <%= simple_form_for [@user, @car, @booking]  do |f| %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%#= The status below does not make sense in this context %>
      <%#= f.input :status %>
      <%= f.submit "Submit booking", class: "btn btn-show-car-page" %>
    <% end %>
  </div>
</div>
